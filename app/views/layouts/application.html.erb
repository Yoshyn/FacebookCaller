<!DOCTYPE html>
<html>
	<head>
		<title>Facebook Object Visualizer</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
		<%= javascript_include_tag "bootstrap" %>
	</head>
	<body>
		<div class="navbar navbar-fixed-top">

			<div class="navbar-inner">
				<div class="container">
					<a class="brand" href="/">Simple Facebook Object Visualizer App</a>
					<ul class="nav">
						<li <%= yield(:active_home) %>>
							<%= link_to 'Home', home_index_path %>
						</li>
						<li <%= yield(:active_help) %>>
							<%= link_to 'Help', help_index_path %>
						</li>
					</ul>
				</div>
			</div>
		</div>

		<div class="container" style="margin-top: 60px;">
			<%= yield %>
		</div>

		<footer>
			<div>
				<p>
					Facebook Object Visualizer @ 2012
				</p>
			</div>
		</footer>
	</body>
</html>
<h3> Select Options </h3>

<% if !@connection_tab.blank? %>
<p>
	<%= label_tag(:connection_type, "Choose connection type") %>
	<%= select_tag(:connection_type, options_from_collection_for_select(@connection_tab, :first, :first), :include_blank => true) %>
</p>
<p>
	<%= label_tag(:result_limit, "Number of results") %>
	<%= select_tag(:result_limit, options_from_collection_for_select(@result_limit, :last, :first)) %>
</p>
<%= link_to "Refresh" , '', :class => 'btn btn-secondary', :id => 'fb_refresh' %>
<% end %>
